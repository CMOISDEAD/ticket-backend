<html lang='es'>
  <head>
    <meta charset='utf-8' />
    <title>Pago confirmado</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        background: #f9fafb;
        font-family: ui-monospace, SFMono-Regular, Menlo, monospace;
        color: #0f172a;
      }
      .email {
        max-width: 700px;
        margin: 40px auto;
        background: #ffffff;
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        box-shadow: 0 0 24px rgba(0, 255, 200, 0.15);
      }
      .inner {
        padding: 32px;
      }
      .header {
        border-bottom: 2px solid #22d3ee;
        padding-bottom: 20px;
        margin-bottom: 24px;
      }
      h1 {
        font-size: 24px;
        margin: 0 0 8px 0;
        font-weight: 700;
        color: #0ea5e9;
        letter-spacing: 0.5px;
      }
      h2 {
        font-size: 20px;
        margin: 24px 0 12px 0;
        font-weight: 600;
        color: #0f172a;
      }
      p {
        margin: 0 0 12px 0;
        line-height: 1.6;
        font-size: 14px;
      }
      .event-info {
        background: #f1f5f9;
        padding: 20px;
        border-radius: 12px;
        margin: 20px 0;
        border-left: 4px solid #22d3ee;
      }
      .event-info p {
        margin: 8px 0;
      }
      .event-info strong {
        color: #0ea5e9;
      }
      .tickets-container {
        margin: 24px 0;
      }
      .ticket-card {
        background: #ffffff;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        padding: 20px;
        margin: 16px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 16px;
      }
      .ticket-card.vip {
        border-color: #fbbf24;
        background: linear-gradient(135deg, #fef3c7 0%, #ffffff 100%);
      }
      .ticket-card.regular {
        border-color: #60a5fa;
        background: linear-gradient(135deg, #dbeafe 0%, #ffffff 100%);
      }
      .ticket-header {
        width: 100%;
        text-align: center;
        padding-bottom: 12px;
        border-bottom: 1px solid #e5e7eb;
      }
      .ticket-type {
        font-size: 18px;
        font-weight: 700;
        text-transform: uppercase;
        margin: 0 0 8px 0;
      }
      .ticket-type.vip {
        color: #d97706;
      }
      .ticket-type.regular {
        color: #2563eb;
      }
      .ticket-id {
        font-size: 12px;
        color: #64748b;
        font-family: monospace;
        margin: 4px 0;
      }
      .ticket-price {
        font-size: 16px;
        font-weight: 600;
        color: #0f172a;
      }
      .qr-code {
        width: 300px;
        height: 300px;
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        padding: 8px;
        background: #ffffff;
      }
      .qr-code img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
      .btn {
        display: inline-block;
        margin-top: 20px;
        padding: 14px 24px;
        background: #22d3ee;
        color: #0b1020;
        text-decoration: none;
        font-weight: 700;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(34, 211, 238, 0.5);
        text-align: center;
      }
      .btn:hover {
        filter: brightness(1.05);
      }
      .footer {
        border-top: 1px solid #e5e7eb;
        padding: 20px 32px;
        font-size: 12px;
        color: #94a3b8;
        text-align: center;
        background: #f9fafb;
        border-radius: 0 0 16px 16px;
      }
      .total-info {
        background: #0ea5e9;
        color: #ffffff;
        padding: 16px;
        border-radius: 8px;
        text-align: center;
        margin: 24px 0;
      }
      .total-info p {
        margin: 4px 0;
        font-size: 16px;
      }
      .total-amount {
        font-size: 28px;
        font-weight: 700;
        margin: 8px 0;
      }
    </style>
  </head>
  <body>
